                        this.selectedMoney = 0
                        this.closeBeli = false
                        this.totalPayment = total
                        return total
                    }
                    else if (Number(total) > Number(this.selected.price * this.selectedStock)) {
                        this.closeMoney = true
                        this.closeBeli = false
                        this.selectedMoney = 0
                        this.totalPayment = total
